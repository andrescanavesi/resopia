extends layout

block content
  each recipe in recipes
    div.mt-3.mb-2
      h1.px-2.py-1
        a(href=`${recipe.url}`, title="Go to this recipe detail")=recipe.title
      - var img = recipe.featured_image_url
      if isMobile
        - img = recipe.featured_image_url_mobile
      img.lozad.img-fluid(data-src=img, alt='imagen receta')
      div.px-2.py-1.border.rounded-bottom
        div
          .text-muted= recipe.description
        if !isMobile
          h2.my-2 Ingredientes
          ul.list-group.list-group-flush
            each ingr in recipe.ingredients_array
              li(onclick="activateElem(this)").list-group-item= ingr
        p.text-right.mt-2.lead
          a(href=`${recipe.url}`, title="Go to the recipe detail") Abrir &#8594;    
              
              



